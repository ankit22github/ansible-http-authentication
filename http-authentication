- hosts: 192.168.43.79
  tasks:
  - package:
       name: "httpd"
       state: present
  - copy:
       dest: "/var/www/html/index.html"
       content: "Secure Server\n"
  - replace:
       path: "/etc/httpd/conf/httpd.conf"
       regexp: "AllowOverride None"
       replace: "AllowOverride AuthConfig"
  - copy:
       dest: "/var/www/html"
       src: ".htaccess"
  - pip:
       name: "passlib"
  - htpasswd:
       path: "/etc/www.passwd"
       name: "gilda"
       password: "gilda"
  - service:
       name: "httpd"
       state: started
       enabled: yes
  - firewalld:
       port: "80/tcp"
       state: enabled
       permanent: yes
       immediate: yes
